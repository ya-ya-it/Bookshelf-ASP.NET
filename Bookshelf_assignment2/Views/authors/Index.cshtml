@model IEnumerable<Assignment1.Models.author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Last name
        </th>
        <th>
            First name
        </th>
        <th>
            Date of birth
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.last_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_of_birth)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.author_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.author_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.author_id })
        </td>
    </tr>
}

</table>
